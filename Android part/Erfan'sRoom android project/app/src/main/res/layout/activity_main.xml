<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 1"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:switchTextAppearance="@style/x"
        android:textColor="#FFFFDD"

        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 2"
        android:id="@+id/switch2"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:switchTextAppearance="@style/x"
        android:textColor="#FFFFDD"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 3"
        android:id="@+id/switch3"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:switchTextAppearance="@style/x"
        android:textColor="#FFFFDD"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 4"
        android:id="@+id/switch4"
        android:layout_below="@+id/switch3"
        android:layout_alignLeft="@+id/switch3"
        android:layout_alignStart="@+id/switch3"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:switchTextAppearance="@style/x"
        android:textColor="#FFFFDD"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 5"
        android:id="@+id/switch5"
        android:layout_below="@+id/switch4"
        android:layout_alignLeft="@+id/switch4"
        android:layout_alignStart="@+id/switch4"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:switchTextAppearance="@style/x"
        android:textColor="#FFFFDD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:layout_below="@+id/switch5"
        android:layout_alignLeft="@+id/switch5"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFDD"
         />

</RelativeLayout>
